<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arexnt.mydaygram.MainActivity"
    android:background="@color/daygram"
    android:orientation="vertical">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_alignParentBottom="true"
       android:id="@+id/toolbar"
       >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal"
          android:layout_gravity="center|bottom"
          android:weightSum="10">
         <LinearLayout
             android:layout_gravity="center"
             android:layout_width="5dp"
             android:layout_height="match_parent"
             android:background="#000"
             android:layout_marginTop="12dp"
             android:layout_marginBottom="12dp"
             android:layout_marginLeft="12dp"
             android:layout_weight=".1">

         </LinearLayout>
         <TextView
             android:layout_gravity="center"
             android:id="@+id/monthbtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="@color/daygram"
             android:textColor="#000"
             android:text="SEPTEMBER"
             android:textAlignment="center"
             android:textSize="17sp"/>
         <LinearLayout
             android:layout_gravity="center_horizontal|center_vertical"
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="#000"
             android:layout_marginTop="12dp"
             android:layout_marginBottom="12dp">
         </LinearLayout>
         <TextView
             android:layout_gravity="center"
             android:id="@+id/yearbtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1.5"
             android:background="@color/daygram"
             android:text="2015"
             android:textSize="17sp"
             android:textColor="#000"
             android:textAlignment="center"
             />
         <LinearLayout
             android:layout_gravity="center"
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="#000"
             android:layout_marginTop="12dp"
             android:layout_marginBottom="12dp">
         </LinearLayout>
         <TextView
             android:id="@+id/new_Diary_btn"
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1.5"
             android:background="@color/daygram"
             android:textColor="#000"
             android:text="+"
             android:textStyle="bold"
             android:textSize="20sp"
             android:textAlignment="center"/>
         <LinearLayout
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="#000"
             android:layout_marginTop="12dp"
             android:layout_marginBottom="12dp"
             >
         </LinearLayout>
         <LinearLayout
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_weight="4"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:id="@+id/xbtn"
             >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="13dp"
                android:background="#000">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginTop="2dp"
                android:background="#000">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="#000">
            </LinearLayout>

         </LinearLayout>
         <ImageButton
             android:layout_gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="18dp"
             android:background="@drawable/diagonal_9_bg"
             android:layout_weight="1.5"
             android:id="@+id/button"/>
      </LinearLayout>

   </RelativeLayout>
   <ListView
       android:id="@+id/diary_list"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingBottom="40dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true">

   </ListView>

</RelativeLayout>



